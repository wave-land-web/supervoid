---
import type { ImageMetadata } from 'astro'
import { Picture } from 'astro:assets'

export interface Props {
  title?: string
  imageSrc?: ImageMetadata
  imageAlt?: string
}

const { title, imageSrc, imageAlt } = Astro.props
---

<header class="relative pt-[calc(var(--nav-height)+4rem)] md:pt-[calc(var(--nav-height)+6rem)]">
  {
    title && (
      <h1 class="absolute w-full top-[calc(var(--nav-height)+2rem)] md:top-[calc(var(--nav-height)+4rem)] left-1/2 -translate-x-1/2 text-l drop-shadow-lg text-center uppercase">
        {title}
      </h1>
    )
  }

  {imageSrc && imageAlt && <Picture src={imageSrc} alt={imageAlt} loading="eager" />}
</header>
