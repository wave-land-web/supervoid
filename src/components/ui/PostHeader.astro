---
import { Picture } from 'astro:assets'

const { frontmatter, image } = Astro.props
const { title, published, imageAlt } = frontmatter
---

<header
  class="relative px-0 pt-[calc(var(--nav-height)+4rem)] md:pt-[calc(var(--nav-height)+6rem)] lsa lsa-slide-up no-repeat"
>
  <h1
    class="absolute w-full top-[calc(var(--nav-height)+2rem)] md:top-[calc(var(--nav-height)+4rem)] left-1/2 -translate-x-1/2 text-l drop-shadow-lg text-center uppercase"
  >
    {title}
  </h1>
  <Picture
    src={image}
    formats={['avif', 'webp']}
    alt={imageAlt}
    loading="eager"
    class="mb-4 w-full"
  />
  <p class="font-header text-grey-100 text-xs text-center">
    {
      new Date(published).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric',
      })
    }
  </p>
</header>
