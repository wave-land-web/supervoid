---
import { Picture } from 'astro:assets'

const { post } = Astro.props
---

<article class="lsa lsa-slide-up no-repeat group">
  <a href={`/press/${post.slug}`}>
    <div class="mb-4 h-[clamp(250px,30vw,400px)] overflow-hidden rounded-xl">
      <Picture
        src={post.data.image}
        alt={post.data.imageAlt}
        formats={['avif', 'webp']}
        class="brightness-75 group-hover:brightness-100 group-hover:scale-105 transition duration-500 w-full h-full object-cover"
      />
    </div>
    <h2 class="mb-2 text-s">
      {post.data.title}
    </h2>
    <p class="text-grey-100">
      {
        new Date(post.data.published).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        })
      }
    </p>
  </a>
</article>
