---
import { Icon } from 'astro-icon/components'
import Layout from '../layouts/Layout.astro'
import WorkPreviewCard from '../components/ui/WorkPreviewCard.astro'
import { getCollection } from 'astro:content'

const workData = await getCollection('work')
---

<Layout title="Animation, VFX, and Technical Design Studio">
  <!-- TODO: adjust margin bottom on video slot when there is content -->
  <div
    slot="video-slot"
    class="relative max-w-screen-2xl mx-auto pb-[56.25%] h-0 w-full after:content-[''] after:absolute after:bottom-0 after:left-0 after:w-full after:h-full after:bg-gradient-to-b after:from-transparent after:to-black mb-36 md:mb-0"
  >
    <mux-player
      playback-id="g6oY8q47moU8I00gfNyyj00egYW4400dTyAEs5CFa300RGc"
      metadata-video-title="SuperVoid 2024 Reel"
      metadata-viewer-user-id="12345"
      accent-color="var(--color-magenta-900)"
      class="w-full absolute top-0 left-0"
      style="--controls: none;"
      thumbnail-time="0"
      poster=""
      loop
      muted
      autoplay></mux-player>

    <header>
      <div
        id="header-content"
        class="absolute top-[110%] md:top-1/2 left-0 md:-translate-y-1/2 px-4 md:px-8 z-10"
      >
        <h1 class="text-2xl md:text-3xl lg:text-4xl mb-4 drop-shadow-lg">SUPERVOID</h1>
        <p class="text-xs md:text-base lg:text-s drop-shadow-lg">
          Psychedelic Dreams for Stage + Screen
        </p>
      </div>
      <div
        id="video-controls"
        class="absolute bottom-4 md:bottom-8 right-4 md:right-8 flex flex-col lg:flex-row gap-4 lg:gap-6 z-10"
      >
        <button
          id="play"
          class="hidden hover:scale-110 transition-all duration-200 active:scale-95"
        >
          <Icon name="tabler:player-play" class="w-6 lg:w-8 text-magenta-900" />
        </button>

        <button id="pause" class="hover:scale-110 transition-all duration-200 active:scale-95">
          <Icon name="tabler:player-pause" class="w-6 lg:w-8 text-magenta-900" />
        </button>

        <button id="volume-off" class="hover:scale-110 transition-all duration-200 active:scale-95">
          <Icon name="tabler:volume-off" class="w-6 lg:w-8 text-magenta-900" />
        </button>

        <button
          id="volume-on"
          class="hidden hover:scale-110 transition-all duration-200 active:scale-95"
        >
          <Icon name="tabler:volume" class="w-6 lg:w-8 text-magenta-900" />
        </button>
      </div>
    </header>
  </div>
  <main class="relative w-full bg-black">
    <!-- TODO: Add all projects and style WorkPreviewCard -->
    <section id="work" class="grid md:grid-cols-2 gap-x-10 gap-y-12">
      {workData.map((work) => <WorkPreviewCard work={work} />)}
    </section>
  </main>
</Layout>

<script>
  // TODO: Add event listeners for video controls
  const player = document.querySelector('mux-player') as HTMLTemplateElement
  const play = document.getElementById('play') as HTMLButtonElement
  const pause = document.getElementById('pause') as HTMLButtonElement
  const volumeOff = document.getElementById('volume-off') as HTMLButtonElement
  const volumeOn = document.getElementById('volume-on') as HTMLButtonElement

  play?.addEventListener('click', function () {
    console.log('play')
    this.classList.toggle('hidden')
    pause?.classList.toggle('hidden')
  })

  pause?.addEventListener('click', function () {
    console.log('pause')
    this.classList.toggle('hidden')
    play?.classList.toggle('hidden')
  })

  volumeOff?.addEventListener('click', function () {
    console.log('volume off')
    this.classList.toggle('hidden')
    volumeOn?.classList.toggle('hidden')
  })

  volumeOn?.addEventListener('click', function () {
    console.log('volume on')
    this.classList.toggle('hidden')
    volumeOff?.classList.toggle('hidden')
  })
</script>
